                        <% if category.maturity %>
                            <% if category.maturity == "minimal" %>
                                <% plannedMaturity = ( "Viable on #{category.viable}" + ( category.viable < Date.today ? " _(late)_" : '') ) if category.viable %>
                            <% elsif category.maturity == "viable" %>
                                <% plannedMaturity = ( "Complete on #{category.complete}" + ( category.complete < Date.today ? " _(late)_" : '') ) if category.complete %>
                            <% elsif category.maturity == "complete" %>
                                <% plannedMaturity = ( "Lovable on #{category.lovable}" + ( category.lovable < Date.today ? " _(late)_" : '') ) if category.lovable %>
                            <% end %>
                        <% end %>
                        <% categoryRow << plannedMaturity %>
                        <% categoryRow << ( category.ux_scorecard_link? ? "[UX Scorecard" + ( category.ux_scorecard_score? ? ": #{category.ux_scorecard_score}" : '' ) + "](#{category.ux_scorecard_link})" : '' ) %>
                        <% categoryRow << ( category.label? ? "[Usability Issues](https://gitlab.com/gitlab-org/gitlab/-/issues?scope=all&utf8=%E2%9C%93&state=opened&label_name[]=usability&label_name[]=#{category.label})" : '' ) %>
