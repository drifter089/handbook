                        <% categoryRow << '' %>
                        <% categoryRow << group_engineering_total_summary(group: group) %>
                        <% categoryRow << '' %>
                        <% categoryRow << ( category.label? ? "[Top Issues](https://gitlab.com/groups/gitlab-org/-/issues?scope=all&utf8=%E2%9C%93&state=opened&label_name[]=customer&label_name[]=#{category.label})" : '' ) %>
                        <% categoryRow << ( category.documentation? ? "[Documentation](#{category.documentation})" : '' )%>
